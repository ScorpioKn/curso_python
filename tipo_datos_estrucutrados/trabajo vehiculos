# Conexión a la base de datos
conn = sqlite3.connect('database.db')
cursor = conn.cursor()

# Definir la clase Vehiculo
class Vehiculo:
    def _init_(self, marca, modelo, año):
        self.marca = marca
        self.modelo = modelo
        self.año = año

# Operaciones disponibles
def ver_lista_autos():
    cursor.execute("SELECT * FROM vehiculos")
    lista_autos = cursor.fetchall()
    return lista_autos

def actualizar_auto(id, marca, modelo, año):
    cursor.execute("UPDATE vehiculos SET marca=?, modelo=?, año=? WHERE id=?", (marca, modelo, año, id))
    conn.commit()

def agregar_nuevo_vehiculo(marca, modelo, año):
    cursor.execute("INSERT INTO vehiculos (marca, modelo, año) VALUES (?, ?, ?)", (marca, modelo, año))
    conn.commit()

# Ejemplos de uso
# Ver la lista de autos
print(ver_lista_autos())

# Actualizar un vehículo
actualizar_auto(1, "Toyota", "Corolla", 2020)

# Agregar un nuevo vehículo
agregar_nuevo_vehiculo("Honda", "Civic", 2022)

